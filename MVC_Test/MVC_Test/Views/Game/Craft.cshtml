@model List<MVC_Test.Models.Item>

@{
    ViewBag.Title = "Crafting";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <h2>Crafting</h2>
        <div class="row">
            <div class="col-md-6">
                @foreach (MVC_Test.Models.Item item in Model)
                {
                    <p>
                        @item.Name - Costs:
                            @foreach (MVC_Test.Models.Item i in item.MadeOf)
                            {
                                <p>i.Name</p>
                            }
                    </p>
                }
            </div>
        </div>
    </div>
}




