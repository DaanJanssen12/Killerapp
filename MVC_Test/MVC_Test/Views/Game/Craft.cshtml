@using MVC_Test.Models
@model List<Item>

@{
    ViewBag.Title = "Crafting";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <h2>Crafting</h2>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-2"><h3>Name</h3></div>
                    <div class="col-sm-2"><h3>Costs</h3></div>
                </div>
            </div>
            <div class="panel-body">
                @foreach (Item item in Model)
                {
                        <div class="row">
                            <div class="col-sm-2">@item.Name</div>
                            @if (item.MadeOf != null)
                            {
                                
                                <div class="col-sm-2">@item.MadeOf.Name x @item.MadeOf.Durability</div>
                                
                            } 
                            <div class="col-sm-2"><input type="submit" name="craft" value="Craft a @item.Name" /></div>                          
                    </div>
                }
            </div>
        </div>
    </div>
}
@if (null != TempData["CraftMessage"])
{
    <script type="text/javascript">
       alert("@TempData["CraftMessage"]");
    </script>
}




